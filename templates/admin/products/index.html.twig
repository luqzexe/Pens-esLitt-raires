{% extends 'base.html.twig' %}

{% block title %}Liste des produits{% endblock %}

{% block body %}
    <section class="section__title section">
        <h1>Liste des produits</h1>
    </section>

    <div class="container">
        <div class="row">
            {% include '_partials/_adminnav.html.twig' %}
            <main class="col-9 border border-ligth bg-light p-2">
                
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Photo</th>
                                <th>Nom</th>
                                <th>Auteur</th>
                                <th>Prix</th>
                                <th>Stock</th>
                                <th>Catégorie</th>
                                <th class="col-2">Actions</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for produit in produits %}
                                <tr>
                                    <td>{{ produit.id }}</td>
                                    <td>
                                    {# {% if produit.images is defined and produit.images[0] is defined %} #}
                                    <img src="{{ asset('assets/uploads/products/' ~ produit.images[0].name ) }}" alt="{{ produit.name }}" class="img-thumbnail">
                                    {# {% endif %} #}
                                    </td>
                                    <td>{{ produit.name }}</td>
                                    <td>{{ produit.author }}</td>
                                    <td>{{ produit.price / 100 }}</td>
                                    <td>{{ produit.stock }}</td>
                                    <td>{{ produit.categories.name}}</td>
                                    <td>
                                        <a href="{{ path('admin_products_edit', {id: produit.id} ) }}" class="btn btn-success">Modifier</a>
                                    </td>
                                    <td>
                                        <a href="{{ path('admin_products_delete', {id: produit.id} ) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?')" class="btn btn-danger">Supprimer</a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
            </main>
        </div>
    </div>
{% endblock %}